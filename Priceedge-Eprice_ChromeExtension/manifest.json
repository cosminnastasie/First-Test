{
    "manifest_version": 2,
    "name": "Priceedge competitor pricing",
    "version": "2.0",
    "description": "Eprice - Chrome extension developed by PriceEdge team for monitoring competitor prices",
    "content_scripts": [
        {
            "matches": [
                "https://www.eprice.it/*",
                "https://www.trony.it/*",
                "https://monclick.it/*",
                "https://www.monclick.it/*",
                "https://www.yeppon.it/*",
                "https://www.amazon.it/*",
                "https://www.onlinestore.it/*",
                "https://onlinestore.it/*",
                "https://www.amazon.it/*",
                "https://www.mediaworld.it/*",
                "https://www.unieuro.it/*",
                "https://www.euronics.it/*",
                "https://www.trony.it/*",
                "http://localhost/*",
                "https://eprice.priceedge.eu/*"
            ],
            "js": [ "js/jquery.js", "content.js"],
            "css": ["css/content.css"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent", // you can add whatever you want/need,
        "https://eprice.priceedge.eu/",
        "https://www.eprice.it/*",
        "https://eprice.priceedge.eu/*",
        "https://www.yeppon.it/*",
         "<all_urls>", "contextMenus"
    ],
    "background": {
        "scripts": ["js/jquery.js", "background.js"]
    }
}